.wxc-steps--steps.wxc-steps--5 .wxc-steps__step {

  width: 25%;

}



.wxc-steps--steps.wxc-steps--4 .wxc-steps__step {

  width: 33%;

}



.wxc-steps--steps.wxc-steps--3 .wxc-steps__step {

  width: 50%;

}



.wxc-steps--steps .wxc-steps__step {

  position: relative;

  float: left;

  padding-bottom: 25rpx;

  color: #b1b1b1;

  width: 100%;

}



.wxc-steps--steps .wxc-steps__title {

  transform: translateX(-50%);

  font-size: 25rpx;

  text-align: center;

}

.wxc-steps__title--desc{
  font-size: 16rpx !important;
}



.wxc-steps--steps .wxc-steps__icons {

  position: absolute;

  top: 68rpx;

  left: -10rpx;

  padding: 0 8rpx;

  background-color: #fff;

  z-index: 10;

}



.wxc-steps--steps .wxc-steps__circle {

  display: block;

  position: relative;

  width: 13rpx;

  height: 13rpx;

  background-color: #e5e5e5;

  border-radius: 50%;

}





.wxc-steps--steps .wxc-steps__line {

  position: absolute;

  left: 0rpx;

  top: 79rpx;

  width: 100%;

  height: 2rpx;

  background-color: #e5e5e5;

}





/* 已完成的steps */

.wxc-steps--steps .wxc-steps__step--done {

  color: #333;

}



.wxc-steps--steps .wxc-steps__step--done .wxc-steps__line {

  background-color: #06bf04;

}



.wxc-steps--steps .wxc-steps__step--done .wxc-steps__circle {

  width: 13rpx;

  height: 13rpx;

  background-color: #09bb07;

}



/* 正在进行中的steps */

.wxc-steps--steps .wxc-steps__step--cur  .wxc-steps__icons {

  top: 65rpx;

  left: -14rpx;

}



.wxc-steps--steps .wxc-steps__step--cur .wxc-steps__circle {

  width: 26rpx;

  height: 26rpx;

  background-image: url("https://b.yzcdn.cn/v2/image/wap/success_small@2x.png");

  background-size: 26rpx 26rpx;

}



.wxc-steps--steps .wxc-steps__step--cur .wxc-steps__line {

  background-color: #e5e5e5;

}



/* 各种不同位置的 */

.wxc-steps--steps .wxc-steps__step--first-child .wxc-steps__title {

  margin-left: 0;

  transform: none;

  text-align: left;

}



.wxc-steps--steps .wxc-steps__step--first-child .wxc-steps__icons {

  left: -7rpx;

}



.wxc-steps--steps .wxc-steps__step--last-child {

  position: absolute;

  right: 0;

  top: 0;

  text-align: right;

}



.wxc-steps--steps .wxc-steps__step--last-child .wxc-steps__title {

  transform: none;

  text-align: right;

}



.wxc-steps--steps .wxc-steps__step--last-child .wxc-steps__icons {

  left: auto;

  right: -6rpx;

}



.wxc-steps--steps .wxc-steps__step--last-child .wxc-steps__line {

  display: none;

}



/* 有描述的step */

.wxc-steps--steps .wxc-steps__step--db-title {

  min-height: 45rpx;

}



.wxc-steps--steps .wxc-steps__step--db-title .wxc-steps__line {

  top: 78rpx;

}



.wxc-steps--steps .wxc-steps__step--db-title .wxc-steps__icons {

  top: 75rpx;

}



.wxc-steps--steps .wxc-steps__step--db-title.wxc-steps__step--cur .wxc-steps__icons {

  top: 65rpx;

}